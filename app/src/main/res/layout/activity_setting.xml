<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_standard"
        android:layout_marginTop="@dimen/tab_height"
        tools:context=".activity.SettingActivity">

        <TextView
            android:id="@+id/tvDisplay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_bigger"
            android:paddingLeft="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:text="@string/display"
            android:textColor="?attr/colorTitle"
            android:textSize="@dimen/text_size_big"/>

        <LinearLayout
            android:id="@+id/llLang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_bigger"
            android:paddingLeft="@dimen/margin_standard"
            android:paddingRight="@dimen/margin_standard"
            android:background="@color/item_settings_press"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/language"
                android:textColor="?attr/colorText"
                android:textSize="@dimen/text_size_standard"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:background="@color/item_settings_press"
                android:text="@string/language"
                android:textColor="?attr/colorText"
                android:textSize="@dimen/text_size_standard"
                android:layout_weight="1"/>
        </LinearLayout>


    <LinearLayout
        android:id="@+id/llTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bigger"
        android:paddingLeft="@dimen/margin_standard"
        android:paddingRight="@dimen/margin_standard"
        android:background="@color/item_settings_press"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/theme"
            android:textColor="?attr/colorText"
            android:textSize="@dimen/text_size_standard"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tvTheme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:text="@string/theme"
            android:textColor="?attr/colorText"
            android:textSize="@dimen/text_size_standard"
            android:layout_weight="1"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_standard"
            android:background="?attr/colorSpecBackground"/>

        <LinearLayout
            android:id="@+id/llReset"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_big"
            android:paddingLeft="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:background="@drawable/item_spec_settings_press">

            <TextView
                android:id="@+id/tvReset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/reset"
                android:textColor="?attr/colorTitle"
                android:textSize="@dimen/text_size_big"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>

